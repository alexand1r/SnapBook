@model IEnumerable<CategoryListingServiceModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

@foreach (var category in Model)
{
    <div>@category.Name</div>
    <div>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
    </div>
}

<div>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-success">Create New Category</a>
</div>

